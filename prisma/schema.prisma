// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model Version {
  id                  String @id @default(cuid())
  // fullVersionOrBranch v0.17.0
  fullVersionOrBranch String @unique
  // versionHeadOrBranch v0.17
  versionHeadOrBranch String

  // relations
  docs Doc[]
}

model Doc {
  id       String @id @default(cuid())
  fileName String
  html     String

  // relations
  fullVersionOrBranch   Version @relation(fields: [fullVersionOrBranchId], references: [id], onDelete: Cascade)
  fullVersionOrBranchId String

  // unique fileName per fullVersionOrBranch
  @@unique([fileName, fullVersionOrBranchId])
}
