// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model Version {
  id                  String @id @default(cuid())
  // fullVersionOrBranch v0.17.0, v6.0.1
  fullVersionOrBranch String @unique
  // versionHeadOrBranch v0.17, v6
  versionHeadOrBranch String

  // relations
  docs Doc[]
}

model Doc {
  id       String @id @default(cuid())
  filePath String
  md       String
  html     String
  title    String
  order    Int?

  // relations
  fullVersionOrBranch   Version @relation(fields: [fullVersionOrBranchId], references: [id], onDelete: Cascade)
  fullVersionOrBranchId String

  // unique filePath per fullVersionOrBranch
  @@unique([filePath, fullVersionOrBranchId])
}
