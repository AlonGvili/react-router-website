datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite?connection_limit=1&socket_timeout=30"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialActions"]
}

model Version {
  id                  String @id @default(cuid())
  // fullVersionOrBranch v0.17.0
  fullVersionOrBranch String @unique
  // versionHeadOrBranch v0.17
  versionHeadOrBranch String
  docs                Doc[]
}

model Doc {
  id                    String  @id @default(cuid())
  fileName              String
  fullVersionOrBranch   Version @relation(fields: [fullVersionOrBranchId], references: [id], onDelete: Cascade)
  fullVersionOrBranchId String
  html                  String

  // @@unique([fileName, fullVersionOrBranchId])
}
