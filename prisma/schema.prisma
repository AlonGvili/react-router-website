// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Version {
  versionHeadOrBranch String @id // versionHeadOrBranch v0.17
  fullVersionOrBranch String @unique // fullVersionOrBranch v0.17.0
  docs                Doc[]
}

model Doc {
  fileName              String  @id
  versionHeadOrBranch   Version @relation(fields: [versionHeadOrBranchId], references: [versionHeadOrBranch])
  versionHeadOrBranchId String
  html                  String
}
